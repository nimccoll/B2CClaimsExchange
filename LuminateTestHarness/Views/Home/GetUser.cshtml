@{
    ViewBag.Title = "Get User";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Get User</h4>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Email Address</label>
            <div class="col-md-10">
                <input type="email" id="emailAddress" name="emailAddress" class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Get User" class="btn btn-default" />
        </div>
    </div>

    if (!string.IsNullOrEmpty(ViewBag.Email))
    {
        <p>cons_id for user @ViewBag.Email is @ViewBag.ConsId</p>
    }
}

<div>
    @Html.ActionLink("Home", "Index")
</div>
