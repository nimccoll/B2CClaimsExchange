
@{
    ViewBag.Title = "Get Token";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Get Single Sign On Token</h4>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-2">Cons ID</label>
            <div class="col-md-10">
                <input type="number" id="consId" name="consId" class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Get Single Sign On Token" class="btn btn-default" />
        </div>
    </div>

    if (!string.IsNullOrEmpty(ViewBag.ConsId))
    {
        <p>routing_id is @ViewBag.RoutingId and nonce is @ViewBag.Nonce for constituent @ViewBag.ConsId</p>
    }
}

<div>
    @Html.ActionLink("Home", "Index")
</div>
